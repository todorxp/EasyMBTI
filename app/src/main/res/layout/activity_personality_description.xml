<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mg.uros.easymbti.PersonalityDescription">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_personality_type_is"
        android:textSize="25sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/MBTITypeText"
        android:text="INTP"
        android:layout_gravity="center"
        android:textSize="55sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/type_description_long_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Get type Description"
        android:layout_gravity="center"
        android:onClick="onTypeDescriptionClick"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/back_to_questions_button_text"
        android:layout_gravity="center"
        android:onClick="onBackToQuestions"/>




</LinearLayout>
